<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jbnjr.inventorysystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.customer.CustomerActivity" />
        <activity android:name=".activity.product.ProductActivity" />
        <activity android:name=".activity.customer.ModifyCustomerActivity" />
        <activity android:name=".activity.product.ModifyProductActivity" />
        <activity android:name=".activity.stock.StockInActivity" />
        <activity android:name=".activity.customerinvoice.SelectionOrderActivity" />
        <activity android:name=".activity.customerinvoice.SelectedOrderActivity" />
        <activity android:name=".activity.customerinvoice.ConfirmationOrderActivity" />
        <activity android:name=".activity.customerinvoice.InvoiceActivity"></activity>
        <activity android:name=".activity.customerinvoice.edit.EditCurrentSelectedOrderActivity"/>
        <activity android:name=".activity.customerinvoice.edit.EditSelectionOrderActivity" />
    </application>

</manifest>
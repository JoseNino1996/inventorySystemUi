<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    tools:context=".activity.customerinvoice.SelectionOrderActivity">


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#769ad0e1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerSelectedOrders">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected Product"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtOrderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtOrderPric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtCurrentQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Quantity: "
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtDisplayOrderQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Quantity: "
            android:textColor="#000"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/seekBarOrderQty"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:progressBackgroundTint="#042b54" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAddToSelectedProduct"
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:text="Add" />

            <Button
                android:id="@+id/btnComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Complete" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerSelectedOrders"
        android:layout_width="362dp"
        android:layout_height="293dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="#8ccdde"
            android:text="Select a Product"
            android:textColor="#000"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/lvAvailProducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#76b8dae4"

            android:listSelector="#3ec3f4" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>